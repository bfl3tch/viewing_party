<p id="notice"><%= notice %></p>

<h1>Viewers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Host</th>
      <th>Start time</th>
      <th>Date</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @viewers.each do |viewer| %>
      <tr>
        <td><%= viewer.title %></td>
        <td><%= viewer.host %></td>
        <td><%= viewer.start_time %></td>
        <td><%= viewer.date %></td>
        <td><%= viewer.duration %></td>
        <td><%= link_to 'Show', viewer %></td>
        <td><%= link_to 'Edit', edit_viewer_path(viewer) %></td>
        <td><%= link_to 'Destroy', viewer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Viewer', new_viewer_path %>
