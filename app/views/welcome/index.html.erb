<br/>
<h1 align="center">Welcome to Virtual Watch Party</h1><br/><br/>

<% if !logged_in? %>

  <div align="center">
    <%= form_with url: login_path, method: :post, local: true do |form| %>
      <%= form.label :username, "Username:" %>
      <%= form.text_field :username %><br/><br/>
      <%= form.label :password, "Password:" %>
      <%= form.password_field :password %><br/><br/>
      <%= form.submit "Log In" %>
    <% end %>
  </div><br/><br/>

  <div align="center">
    <%= link_to "New to Virtual Watch Party? Register Here", registration_path, class: 'btn btn-outline-dark' %>
  </div>

<% else %>

  <div align="center">
    <%= link_to "Logout", logout_path, method: :delete, class: 'btn btn-outline-dark' %>
  </div>

<% end %>
