<br/>
<h1 align="center">
  Welcome <%= current_user.username %>
</h1><br/>

<h1 align="center">
  <img src="https://media4.giphy.com/media/9rg3jLvkmuw5cIY0be/giphy.gif?cid=6c09b9527gsbl9w6kbi7q18rxg5mejdsk7kg5bozt0331voh&rid=giphy.gif&ct=s" alt="logo">
  <%= link_to "Discover Movies", discover_path, class:"btn btn-lg btn-outline-dark btn-warning" %>
</h1><br/><br/>

<%= render 'friends' %>

<div>
  <section id='events'>
    <% current_user.events.each do |event| %>
        <%= event.title %> <br>
        <%= event.duration %>min <br>
        <%= event.day.strftime("%B %d, %Y") %> <br>
        <%= event.start_time.strftime("%l:%M %p") %> <br>
        <% if current_user.id == event.user_id %>
          <p>Hosting </p><br>
        <% elsif current_user.id != event.user_id %>
          <p>Invited by  <%=event.determine_host.username %>
        </p><br>
        <p>Attendees: <br>
        <% event.attendees.each do |attendee| %>
          <% if attendee.determine_attendee.id == current_user.id %>
            <b><%= attendee.determine_attendee.username %></b>
          <% else %>
            <%= attendee.determine_attendee.username %></p>
          <% end %> <br>
        <% end %>
      <% end %>
    <% end %>
  </section>
</div>
