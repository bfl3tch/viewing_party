<br/>
<div align="center" class="body" id="body">
  <%= link_to "Find Top Rated Movies", '/movies?top%40rated', class: "btn btn-sm btn-dark navbar-custom blacktext" %><br/><br/>

  <%= form_with(url: movies_path, local: true, method: :get) do |f| %>
    <%= f.text_field :query, label: "Search by Movie Title", class: "btn btn-outline-dark btn-light navbar-custom", placeholder: "ex: The Sandlot"  %>
    <%= f.submit "Find Movies", class: "btn btn-sm btn-outline-dark btn-light navbar-custom" %>
  <% end %>
</div>

<% if !@search.nil? %>
  <%= render 'search'  %>
<% end %>

<% if !@movies.nil?  %>
<br><br>
<div align="center">
  <div class="card navbar-custom"  style="width: 18rem;">
    <div class="card-body">
      <h1 class="card-title">
        Top 40 Movies
      </h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-6">
      <%= render 'top_40_odd'  %>
    </div>
    <div class="col-6">
      <%= render 'top_40_even'  %>
    </div>
  </div>
</div>
<% end %>
