<br/>
<div>
<br/><br/>
  <% @movies.each_with_index do |movie, index| %>
    <% if index.odd? %>
    <div align="center">
      <div id="movies-<%= index %>" class="card navbar-custom"  style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-title">
            #<%= "#{index + 1}" %>
          </h5>
          <h5 class="card-title">
            <%= link_to "#{movie.title}", movie_path(movie.id), class: "btn btn-lg btn-dark navbar-custom blacktext", params: { title: "#{movie.title}" }%>
          </h5>
          <h6 class="card-subtitle mb-2">
            Rating: <%= movie.vote_average %>
          </h6>
          <% if movie.image %>
            <h6 class="card-subtitle mb-2">
              <img src="<%= movie.image %>" width=70%>
            </h6>
          <% end %>
        </div>
      </div>
    </div>
    <br/>
    <% else %>
    <% end %>
  <% end %>
</div>
